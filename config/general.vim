syntax on
set encoding=utf-8
set noerrorbells
set softtabstop=2
set shiftwidth=2
set expandtab
set autoindent
filetype plugin indent on
set nu rnu
set nowrap
set smartcase
set noswapfile
set nobackup
set undodir=~/.nvim/undodir
set undofile
set incsearch
set nohlsearch
set scrolloff=10
set colorcolumn=80
set noshowmode " Don't display "-- INSERT --" (not needed because of lightline)
highlight ColorColumn ctermbg=0 guibg=lightgrey

set background=dark
let mapleader = " "
